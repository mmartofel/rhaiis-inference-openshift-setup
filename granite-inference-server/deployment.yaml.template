kind: Deployment
apiVersion: apps/v1
metadata:
  # annotations:
  name: granite
  namespace: ${NAMESPACE}
  labels:
    app: granite
spec:
  replicas: 1
  selector:
    matchLabels:
      app: granite
  template:
    metadata:
      labels:
        app: granite
    spec:
      restartPolicy: Always
      initContainers:
        - resources: {}
          terminationMessagePath: /dev/termination-log
          name: fetch-model
          command:
            - /bin/sh
            - '-c'
          env:
            - name: DOCKER_CONFIG
              value: /auth
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - name: model-volume
              mountPath: /model
            - name: oci-auth
              readOnly: true
              mountPath: /auth
          terminationMessagePolicy: File
          image: 'ghcr.io/oras-project/oras:v1.2.0'
          args:
            - |
              set -e
              HF_DIR=/model/hf

              if [ -z "$(ls -A $HF_DIR 2>/dev/null)" ]; then
                echo "Pulling Granite OCI artifact..."
                mkdir -p /model/tmp
                oras pull registry.redhat.io/rhelai1/granite-3-1-8b-instruct-quantized-w8a8:1.5 --output /model/tmp

                echo "Listing pulled contents:"
                ls -R /model/tmp

                echo "Copying files into $HF_DIR..."
                mkdir -p $HF_DIR
                cp -r /model/tmp/* $HF_DIR

                echo "Contents in $HF_DIR after copy:"
                ls -R $HF_DIR
              else
                echo "Model already present â€” skipping pull."
              fi
      serviceAccountName: default
      schedulerName: default-scheduler
      terminationGracePeriodSeconds: 30
      securityContext: {}
      containers:
        - resources:
            limits:
              cpu: '10'
              memory: 16Gi
              nvidia.com/gpu: '1'
            requests:
              cpu: '2'
              memory: 6Gi
              nvidia.com/gpu: '1'
          terminationMessagePath: /dev/termination-log
          name: granite
          command:
            - python
          env:
            - name: VLLM_SERVER_DEV_MODE
              value: '0'
          ports:
            - containerPort: 8000
              protocol: TCP
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - name: model-volume
              mountPath: /model
            - name: shm
              mountPath: /dev/shm
          terminationMessagePolicy: File
          envFrom:
            - secretRef:
                name: hf-secret
            - secretRef:
                name: docker-secret
          image: 'registry.redhat.io/rhaiis/vllm-cuda-rhel9@sha256:a6645a8e8d7928dce59542c362caf11eca94bb1b427390e78f0f8a87912041cd'
          args:
            - '-m'
            - vllm.entrypoints.openai.api_server
            - '--port=8000'
            - '--model=/model/hf'
            - '--served-model-name=granite-3-1-8b-instruct-quantized-w8a8'
            - '--max-model-len=75888'
      serviceAccount: default
      volumes:
        - name: model-volume
          persistentVolumeClaim:
            claimName: model-cache
        - name: shm
          emptyDir:
            medium: Memory
            sizeLimit: 2Gi
        - name: oci-auth
          secret:
            secretName: docker-secret
            items:
              - key: .dockercfg
                path: config.json
            defaultMode: 420
      dnsPolicy: ClusterFirst
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600